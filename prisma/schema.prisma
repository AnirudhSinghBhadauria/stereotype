generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model FeedStatus {
  id            String   @id @unique @default(uuid())
  LastRefreshed DateTime @updatedAt
  Message       String
}

model Author {
  id String @id @unique @default(uuid())

  Name           String   @db.VarChar(18)
  Slug           String   @unique
  ProfilePicture String   @unique
  Designation    String
  DescriptionOne String   @db.VarChar(160)
  DescriptionTwo String   @db.VarChar(500)
  JoinedAt       DateTime @unique @default(now())

  AuthorNumber Int @unique @default(autoincrement())

  // Socail Media

  Email     String  @unique
  Twitter   String?
  Instagram String?
  Linktree  String?
  Linkedin  String?

  // Stroy Relation

  HeadlinerStory         HeadlinerStory[]
  SideStory              SideStory[]
  MainStory              MainStory[]
  TechHeadliner          TechHeadliner[]
  NewsHeadliner          NewsHeadliner[]
  EntertainmentHeadliner EntertainmentHeadliner[]
  ReviewHeadliner        ReviewHeadliner[]
  TopStories             TopStories[]
}

model HeadlinerStory {
  id String @id @unique @default(uuid())

  // Dedicated Page content

  Title            String @unique @db.VarChar(90)
  Description      String @db.VarChar(240)
  // Author Relation
  Author           Author @relation(fields: [authorId], references: [id])
  authorId         String
  // Category Relation 
  Category         Genre  @relation(fields: [genreId], references: [id])
  genreId          String
  Slug             String @unique
  Tag              String
  Image            String
  ImageDescription String @db.VarChar(150)

  // Miscllaneous Data

  BackgroundColor Colors   @default(LEAF)
  PostNumber      Int      @unique @default(autoincrement())
  Reads           Int      @default(0)
  CreatedAt       DateTime @default(now())
  UpdatedAt       DateTime @updatedAt

  // Thumb Contnet

  ThumbTitle            String @unique @db.VarChar(70)
  ThumbDescription      String @db.VarChar(120)
  ThumbImage            String
  ThumbImageDescription String @db.VarChar(100)

  // Story Content 

  IntroPara String  @db.VarChar(450)
  ParaTwo   String  @db.VarChar(450)
  ParaThree String  @db.VarChar(450)
  ParaFour  String  @db.VarChar(450)
  ParaFive  String? @db.VarChar(450)
  ParaSix   String? @db.VarChar(450)
  ParaSeven String  @db.VarChar(400)
  ParaEight String  @db.VarChar(450)

  AsideText String @db.VarChar(120)

  @@index([authorId])
  @@index([genreId])
}

